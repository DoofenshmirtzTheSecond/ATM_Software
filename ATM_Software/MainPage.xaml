<Page x:Class="ATM_Software.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ATM_Software"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" Background="White" KeyDown="MainMenu_Choice" >

    <Grid>
        <Button x:Name="Mini_Statement" Content="Mini- Statement" Click="MoveToAccType" HorizontalAlignment="Left" Margin="250,250,0,0" VerticalAlignment="Top" />
        <Button x:Name="Account_Balance" Content="Account Balance" Click="MoveToAccType" HorizontalAlignment="Left" Margin="331,230,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Change_Pin" Content="Change Pin" Click="MoveToChangePinConfirm" HorizontalAlignment="Left" Margin="331,200,0,0" VerticalAlignment="Top" />
        <Button x:Name="Withdrawal" Content="Withdrawal" Click="MoveToAccType" HorizontalAlignment="Left" Margin="300,280,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Cancel" Background="{Binding Path=FillColor}" Click="CancelClick" Content="Cancel" HorizontalAlignment="Left" Margin="331,280,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
