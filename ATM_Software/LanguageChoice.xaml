<Page x:Class="ATM_Software.LanguageChoice"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ATM_Software"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="LanguageChoice" Background="White" KeyDown="ChooseLanguage">

    <Grid>
        <Image x:Name="Logo" HorizontalAlignment="Left" VerticalAlignment="Top" Height="200" Margin="1239,0,0,0" Width="200"/>
        <Rectangle x:Name="Secondary" HorizontalAlignment="Center" VerticalAlignment="Center" Height="880" Stroke="Black" Width="1920" Margin="0,200,0,0"/>
        <Button x:Name="English" Click="Clicker" Content="English" HorizontalAlignment="Right" Margin="482,350,0,0" FontSize="30" Height="50" Width="200" VerticalAlignment="Top"/>
        <Button x:Name="Hindi" Click="Clicker" Content="हिंदी" HorizontalAlignment="Right" Margin="482,550,0,0"  FontSize="30" Height="50" Width="200" VerticalAlignment="Top"/>

    </Grid>
</Page>
